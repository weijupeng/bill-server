<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bill.server.dao.mapper.user.UserMapper">

    <select id="queryUserById" resultType="com.bill.server.dao.entity.User">
        select * from t_user where id =#{id}
    </select>
    <select id="selectUserByPassword" resultType="com.bill.server.dao.entity.User">
        select * from t_user where password =#{user.password}
    </select>
    <select id="selectUserByName" resultType="com.bill.server.dao.entity.User">
        select * from t_user where name =#{user.name}
    </select>
</mapper>
